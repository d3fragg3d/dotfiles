      *window-border-style* :thin
      *message-window-padding* 10
      *mouse-focus-policy* :click
      *group-format* "%t"
      *time-modeline-string* "%H:%M"
      *resize-increment* 50
      *window-border-style* :tight
      *screen-mode-line-format* (list "%g | %v ^>^7 %B | %l | %d %T"))

